#!/usr/bin/make -f
# -*- makefile -*-

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

%:
	dh $@  --with autotools-dev

override_dh_auto_configure:
	dh_auto_configure -- \
		--enable-fortify-sources \
		--enable-static \
		--enable-shared \
		--enable-app-fuzzer \
		--enable-app-performance \
		--enable-app-sniffer \
		--enable-app-tunnel \
		--enable-examples \
		--enable-doc \
		--enable-rohc-tests \
		--enable-fail-on-warning
